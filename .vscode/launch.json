    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Test",
            "useWSL": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${command:extension.vscode-wsl-workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test:debug"
            ],
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}